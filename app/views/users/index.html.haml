%h1.title All Users

.map
 %div#map
 %input#gps{:type => "hidden", :value => @gps_samples.to_json}
 = javascript_include_tag '/assets/maps/OpenLayers'
 = javascript_include_tag '/assets/maps/locations'
 :javascript
  initMap($("#gps").val());


%table#table
 %thead
  %tr
   %th Name
   %th Age
   %th
   %th
 %tbody
  - @users.each do |user|
   %tr
    %td= user.name
    %td= user.edad
    %td= link_to "Upload_Gps", users_upload_path(:id=> user.id)
    %td= link_to "Show Activity Counts", users_showAC_path(:id=> user.id)
    %td= link_to "Delete", user_path(user), :method => :delete, :confirm => 'Are you sure?'


%p= show_flash

%p=link_to "Show Activity Counts", users_showAllAC_path

%p=link_to "Create new User", new_user_path




